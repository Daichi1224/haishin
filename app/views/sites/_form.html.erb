<%= form_with(model: site, class: "contents") do |form| %>
  <div style="display: flex; flex-direction: column; gap: 1.5rem;">
    <div>
      <%= form.text_field :name, placeholder: "現場名を入力してください...",
          style: "width: 100%; padding: 0.8rem 1rem; border-radius: 0.75rem; border: 1px solid #e2e8f0; font-size: 1.125rem; background-color: white;" %>
    </div>

    <div style="display: flex; align-items: center; gap: 1.5rem;">
      <%= form.submit "設定を保存する",
          style: "background-color: #2563eb; color: #ffffff; padding: 0.8rem 2rem; border-radius: 0.75rem; font-weight: bold; border: none; cursor: pointer; min-width: 180px; font-size: 1rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); appearance: none; -webkit-appearance: none;" %>

      <%= link_to "キャンセル", sites_path,
          style: "background-color: #fef2f2; color: #dc2626; padding: 0.8rem 2rem; border-radius: 0.75rem; font-weight: bold; border: 1px solid #fecaca; text-decoration: none; min-width: 140px; text-align: center; font-size: 1rem;" %>
    </div>
  </div>
<% end %>
