<div class="flex justify-center items-center min-h-screen bg-[#F8FAFC] py-24 px-4">

  <div class="w-full max-w-2xl bg-white rounded-[3rem] shadow-[0_25px_60px_rgba(0,0,0,0.03)] p-24 text-center">

    <div class="mb-16">
      <h1 class="text-3xl font-extrabold text-slate-800 tracking-tight">プロフィール設定</h1>
      <p class="text-slate-400 mt-3 text-sm">アカウント情報を編集してください</p>
    </div>

    <%= form_with(model: @user, local: true, class: "space-y-12") do |f| %>

      <div class="space-y-10 px-10 text-left">

        <div class="space-y-3">
          <%= f.label :name, "名前", class: "block text-xs font-bold text-slate-400 ml-1 tracking-widest uppercase" %>
          <%= f.text_field :name, class: "w-full p-5.5 bg-slate-50/50 border border-slate-100 rounded-2xl focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-50/50 outline-none transition-all text-lg text-slate-700 shadow-sm" %>
        </div>

        <div class="space-y-3">
          <%= f.label :email, "メールアドレス", class: "block text-xs font-bold text-slate-400 ml-1 tracking-widest uppercase" %>
          <%= f.email_field :email, class: "w-full p-5.5 bg-slate-50/50 border border-slate-100 rounded-2xl focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-50/50 outline-none transition-all text-lg text-slate-700 shadow-sm" %>
        </div>

        <div class="pt-12 border-t border-slate-50">
          <p class="text-xs font-bold text-slate-400 mb-8 ml-1 tracking-widest uppercase">
            パスワード変更 <span class="ml-2 text-[10px] font-medium bg-slate-100 text-slate-500 px-3 py-1 rounded-full lowercase">Optional</span>
          </p>
          <div class="space-y-5">
            <%= f.password_field :password, class: "w-full p-5.5 bg-slate-50/50 border border-slate-100 rounded-2xl text-base focus:border-blue-500 outline-none transition-all shadow-sm", placeholder: "新しいパスワード" %>
            <%= f.password_field :password_confirmation, class: "w-full p-5.5 bg-slate-50/50 border border-slate-100 rounded-2xl text-base focus:border-blue-500 outline-none transition-all shadow-sm", placeholder: "確認用（再入力）" %>
          </div>
        </div>
      </div>

      <div class="pt-12 px-10 space-y-6 text-center">
        <%= f.submit "変更を保存する", class: "w-full bg-[#1e40af] text-white py-5 rounded-[1.5rem] font-bold hover:bg-blue-800 hover:-translate-y-1 transition-all shadow-2xl shadow-blue-100 cursor-pointer text-xl active:scale-[0.98]" %>
        <%= link_to "キャンセルして戻る", dashboards_show_path, class: "inline-block text-sm text-slate-400 hover:text-slate-600 font-medium transition-colors pt-4 underline underline-offset-8 decoration-slate-200" %>
      </div>
    <% end %>

    <div class="mt-32 pt-12 border-t border-slate-50">
      <%= button_to "アカウントを完全に削除する", @user, method: :delete,
                    data: { turbo_confirm: "本当に削除しますか？\n全てのデータが完全に消去されます。" },
                    class: "px-20 py-5 text-[11px] font-bold text-rose-400 border border-rose-100 rounded-full hover:bg-rose-500 hover:text-white transition-all cursor-pointer inline-block tracking-[0.2em] uppercase" %>
    </div>

  </div>
</div>
