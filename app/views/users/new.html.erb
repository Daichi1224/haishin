<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: #f7fafc; font-family: sans-serif;">
  <div style="max-width: 400px; width: 100%; background: white; padding: 40px; border-radius: 12px; box-shadow: 0 10px 25px rgba(0,0,0,0.1);">

    <div style="text-align: center; margin-bottom: 30px;">
      <h1 style="font-size: 28px; font-weight: bold; color: #1a202c; letter-spacing: 0.1em;">配神</h1>
      <p style="color: #718096; margin-top: 8px;">新規ユーザー登録</p>
    </div>

    <%# --- エラーメッセージ表示エリア --- %>
    <% if @user.errors.any? %>
      <div style="background: #fff5f5; border: 1px solid #feb2b2; color: #c53030; padding: 15px; border-radius: 8px; margin-bottom: 20px; font-size: 0.8em;">
        <ul style="margin: 0; padding-left: 20px;">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <div style="margin-bottom: 20px;">
        <%= f.label :name, "お名前（表示名）", style: "display: block; font-size: 0.85em; margin-bottom: 5px; color: #4a5568;" %>
        <%= f.text_field :name, required: true, placeholder: "例：テスト", style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%# 表示を「ID」に変更 %>
        <%= f.label :email, "ログイン用ID", style: "display: block; font-size: 0.85em; margin-bottom: 5px; color: #4a5568;" %>
        <%= f.text_field :email, required: true, placeholder: "例：test123", style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= f.label :password, "パスワード（6文字以上）", style: "display: block; font-size: 0.85em; margin-bottom: 5px; color: #4a5568;" %>
        <%= f.password_field :password, required: true, style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 25px;">
        <%= f.label :password_confirmation, "パスワード（確認用）", style: "display: block; font-size: 0.85em; margin-bottom: 5px; color: #4a5568;" %>
        <%= f.password_field :password_confirmation, required: true, style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 6px; box-sizing: border-box;" %>
      </div>

      <%= f.submit "登録して始める", style: "width: 100%; padding: 14px; background: #38a169; color: white; border: none; border-radius: 6px; font-weight: bold; cursor: pointer;" %>
    <% end %>

    <div style="text-align: center; margin-top: 25px;">
      <a href="/login" style="color: #718096; text-decoration: none; font-size: 0.85em;">← ログイン画面に戻る</a>
    </div>
  </div>
</div>
